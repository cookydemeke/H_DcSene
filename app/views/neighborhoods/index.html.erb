

<h1>All Neighborhoods</h1>
<%= link_to "Add Neighborhood", new_neighborhood_path %>
<br> <br>
<table>
  <thead>
    <tr>
      <th>Neighborhood</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= neighborhood[:name] %></td>
        <td><%= neighborhood[:lat] %> &#176;</td>
        <td><%= neighborhood[:lng] %> &#176;</td>
        <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood) %></td>
        <td><%= link_to 'Destroy', neighborhood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
